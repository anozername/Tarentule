  <patternset id="excluded.from.module.dant">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dant">
    <patternset refid="excluded.from.module.dant"/>
  </patternset>
  
  
  <target name="compile.module.dant" depends="compile.module.dant.production,compile.module.dant.tests" description="Compile module dant"/>
  
  <target name="compile.module.dant.production" depends="register.custom.compilers" description="Compile module dant; production classes"/>
  
  <target name="compile.module.dant.tests" depends="register.custom.compilers,compile.module.dant.production" description="compile module dant; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dant" description="cleanup module">
    <delete dir="${dant.output.dir}"/>
    <delete dir="${dant.testoutput.dir}"/>
  </target>
