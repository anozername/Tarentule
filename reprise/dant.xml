    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_dant.xml"/>
  
  <import file="${basedir}/src/main/module_main.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.dant, clean.module.main, clean.artifact.dant:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.dant, compile.module.main" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.dant:war" value="${basedir}/target"/>
    <property name="artifact.output.dant:war_exploded" value="${basedir}/target/dant"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.dant.war" value="${artifacts.temp.dir}/dant.war"/>
  </target>
  
  <target name="clean.artifact.dant:war_exploded" description="clean dant:war exploded artifact output">
    <delete dir="${artifact.output.dant:war_exploded}"/>
  </target>
  
  <target name="artifact.dant:war" depends="init.artifacts, artifact.dant:war_exploded" description="Build &#39;dant:war&#39; artifact">
    <property name="artifact.temp.output.dant:war" value="${artifacts.temp.dir}/dant_war"/>
    <mkdir dir="${artifact.temp.output.dant:war}"/>
    <zip destfile="${temp.jar.path.dant.war}">
      <zipfileset dir="${artifact.temp.output.dant:war_exploded}"/>
    </zip>
    <copy file="${temp.jar.path.dant.war}" tofile="${artifact.temp.output.dant:war}/dant.war"/>
  </target>
  
  <target name="artifact.dant:war_exploded" depends="init.artifacts, compile.module.dant" description="Build &#39;dant:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.dant:war_exploded}"/>
    <mkdir dir="${artifact.output.dant:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.dant:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.dant:war_exploded}/WEB-INF/classes">
      <fileset dir="${dant.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.dant:war_exploded}/WEB-INF/lib"/>
    <copy file="${path.variable.maven_repository}/org/jboss/resteasy/resteasy-jaxrs/3.1.0.Final/resteasy-jaxrs-3.1.0.Final.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/resteasy-jaxrs-3.1.0.Final.jar"/>
    <copy file="${path.variable.maven_repository}/org/jboss/spec/javax/ws/rs/jboss-jaxrs-api_2.0_spec/1.0.1.Beta1/jboss-jaxrs-api_2.0_spec-1.0.1.Beta1.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/jboss-jaxrs-api_2.0_spec-1.0.1.Beta1.jar"/>
    <copy file="${path.variable.maven_repository}/org/jboss/resteasy/resteasy-jaxrs-services/3.1.0.Final/resteasy-jaxrs-services-3.1.0.Final.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/resteasy-jaxrs-services-3.1.0.Final.jar"/>
    <copy file="${path.variable.maven_repository}/org/jboss/spec/javax/annotation/jboss-annotations-api_1.2_spec/1.0.0.Final/jboss-annotations-api_1.2_spec-1.0.0.Final.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/jboss-annotations-api_1.2_spec-1.0.0.Final.jar"/>
    <copy file="${path.variable.maven_repository}/javax/activation/activation/1.1.1/activation-1.1.1.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/activation-1.1.1.jar"/>
    <copy file="${path.variable.maven_repository}/org/apache/httpcomponents/httpclient/4.5.2/httpclient-4.5.2.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/httpclient-4.5.2.jar"/>
    <copy file="${path.variable.maven_repository}/org/apache/httpcomponents/httpcore/4.4.4/httpcore-4.4.4.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/httpcore-4.4.4.jar"/>
    <copy file="${path.variable.maven_repository}/commons-logging/commons-logging/1.2/commons-logging-1.2.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/commons-logging-1.2.jar"/>
    <copy file="${path.variable.maven_repository}/commons-codec/commons-codec/1.9/commons-codec-1.9.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/commons-codec-1.9.jar"/>
    <copy file="${path.variable.maven_repository}/commons-io/commons-io/2.5/commons-io-2.5.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/commons-io-2.5.jar"/>
    <copy file="${path.variable.maven_repository}/net/jcip/jcip-annotations/1.0/jcip-annotations-1.0.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/jcip-annotations-1.0.jar"/>
    <copy file="${path.variable.maven_repository}/org/jboss/logging/jboss-logging/3.3.0.Final/jboss-logging-3.3.0.Final.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/jboss-logging-3.3.0.Final.jar"/>
    <copy file="${path.variable.maven_repository}/org/jboss/resteasy/resteasy-servlet-initializer/3.1.0.Final/resteasy-servlet-initializer-3.1.0.Final.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/resteasy-servlet-initializer-3.1.0.Final.jar"/>
    <copy file="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.0/gson-2.8.0.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/gson-2.8.0.jar"/>
    <copy file="${path.variable.maven_repository}/joda-time/joda-time/2.9.7/joda-time-2.9.7.jar" tofile="${artifact.output.dant:war_exploded}/WEB-INF/lib/joda-time-2.9.7.jar"/>
    <mkdir dir="${artifact.output.dant:war_exploded}/META-INF"/>
    <copy file="${basedir}/target/dant/META-INF/MANIFEST.MF" tofile="${artifact.output.dant:war_exploded}/META-INF/MANIFEST.MF"/>
    <copy todir="${artifact.output.dant:war_exploded}">
      <fileset dir="${basedir}/src/main/webapp"/>
    </copy>
    <mkdir dir="${artifact.output.dant:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/src/main/webapp/WEB-INF/web.xml" tofile="${artifact.output.dant:war_exploded}/WEB-INF/web.xml"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.dant:war, artifact.dant:war_exploded" description="Build all artifacts">
    <mkdir dir="${artifact.output.dant:war}"/>
    <copy todir="${artifact.output.dant:war}">
      <fileset dir="${artifact.temp.output.dant:war}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>